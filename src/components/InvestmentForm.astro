<form class="space-y-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label for="investment" class="block text-sm font-medium text-gray-700">
        Investissement mensuel (€)
      </label>
      <input
        type="number"
        id="investment"
        name="investment"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
        min="1"
        required
      />
    </div>
    <div>
      <label for="duration" class="block text-sm font-medium text-gray-700">
        Durée (mois)
      </label>
      <input
        type="number"
        id="duration"
        name="duration"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
        min="1"
        max="120"
        required
      />
    </div>
    <div>
      <label for="asset" class="block text-sm font-medium text-gray-700">
        Actif
      </label>
      <select
        id="asset"
        name="asset"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
      >
        <option value="BTC">Bitcoin (BTC)</option>
        <option value="ETH">Ethereum (ETH)</option>
        <option value="SP500">S&P 500</option>
      </select>
    </div>
  </div>
  <button
    type="submit"
    class="w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors"
  >
    Calculer
  </button>
</form>